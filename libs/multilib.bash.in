# list_libdirs PUBLIC
# Returns a space separated list of libdirs available on this machine
list_libdirs() {
    local libdirs=() arch=$(uname -m)
    case ${arch} in
        x86_64)
            libdirs=("lib32 lib64")
            ;;
        *)
            libdirs=("lib")
            ;;
    esac
    echo "${libdirs[@]}"
}

